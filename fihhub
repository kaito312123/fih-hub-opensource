-- [[ CONFIGURAÇÕES GERAIS ]] --
local NOME_DA_PART = "WINPART"
local ALTURA_OFFSET = 7-- Agora 6 studs acima
local INTERVALO = 1   -- Verificação a cada 1.3 segundos

local tpLigado = false
local afkLigado = false

-- [[ SERVIÇOS ]] --
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local VirtualUser = game:GetService("VirtualUser")
local LocalPlayer = Players.LocalPlayer

-- [[ INTERFACE ]] --
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BunniSimpleHub"
screenGui.ResetOnSpawn = false
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 180, 0, 110)
mainFrame.Position = UDim2.new(0.5, -90, 0.2, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true 
mainFrame.Parent = screenGui

local tpBtn = Instance.new("TextButton")
tpBtn.Size = UDim2.new(0.9, 0, 0, 35)
tpBtn.Position = UDim2.new(0.05, 0, 0.15, 0)
tpBtn.Text = "TP (6 STUDS): OFF"
tpBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
tpBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
tpBtn.Parent = mainFrame

local afkBtn = Instance.new("TextButton")
afkBtn.Size = UDim2.new(0.9, 0, 0, 35)
afkBtn.Position = UDim2.new(0.05, 0, 0.55, 0)
afkBtn.Text = "ANTI-AFK: OFF"
afkBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
afkBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
afkBtn.Parent = mainFrame

-- [[ LÓGICA ANTI-AFK ]] --
LocalPlayer.Idled:Connect(function()
    if afkLigado then
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end
end)

-- [[ LÓGICA DOS BOTÕES ]] --
tpBtn.MouseButton1Click:Connect(function()
    tpLigado = not tpLigado
    tpBtn.Text = tpLigado and "TP: LIGADO" or "TP (6 STUDS): OFF"
    tpBtn.BackgroundColor3 = tpLigado and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(60, 60, 60)
end)

afkBtn.MouseButton1Click:Connect(function()
    afkLigado = not afkLigado
    afkBtn.Text = afkLigado and "AFK: ON" or "ANTI-AFK: OFF"
    afkBtn.BackgroundColor3 = afkLigado and Color3.fromRGB(0, 100, 150) or Color3.fromRGB(60, 60, 60)
end)

-- [[ LOOP DE TELEPORTE DIRETO ]] --
task.spawn(function()
    while true do
        if tpLigado then
            pcall(function()
                local target = nil
                -- Busca a peça no Workspace
                for _, obj in pairs(Workspace:GetDescendants()) do
                    if obj.Name == NOME_DA_PART and obj:IsA("BasePart") then
                        target = obj
                        break
                    end
                end

                if target then
                    local char = LocalPlayer.Character
                    local root = char and char:FindFirstChild("HumanoidRootPart")
                    if root then
                        -- Teleporte seco: Alvo + 6 studs de altura
                        root.CFrame = target.CFrame * CFrame.new(0, ALTURA_OFFSET, 0)
                        -- Zera velocidade para evitar drift
                        root.Velocity = Vector3.new(0, 0, 0)
                    end
                end
            end)
        end
        task.wait(INTERVALO)
    end
end)

print("nigger hub load")
