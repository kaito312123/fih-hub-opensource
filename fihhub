local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- [[ SETTINGS ]] --
local NOME_DA_PART = "WINPART"
_G.tpEnabled = false
_G.noclip = false
_G.flyEnabled = false
_G.antiAfk = false
_G.flySpeed = 50

local ToggleKey = Enum.KeyCode.LeftAlt
local FlyKey = Enum.KeyCode.F
local NoclipKey = Enum.KeyCode.N

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local VirtualUser = game:GetService("VirtualUser")
local LocalPlayer = Players.LocalPlayer

-- [[ WINDOW CONFIG ]] --
local Window = Rayfield:CreateWindow({
   Name = "FihHub",
   LoadingTitle = "FihHub Loading...",
   LoadingSubtitle = "by Slick1245",
   ConfigurationSaving = { Enabled = true, FolderName = "FihHubConfigs", FileName = "settings" },
   KeySystem = false -- Mantido desativado como pediste
})

-- Notificações de Inicialização (Como tinhas antes)
Rayfield:Notify({
   Title = "FihHub Loaded",
   Content = "Welcome back, Slick1245!",
   Duration = 5,
})

-- [[ TABS ]] --
local MainTab = Window:CreateTab("Main", 4483345998)
local MovementTab = Window:CreateTab("Movement", 4483345998)
local SettingsTab = Window:CreateTab("Settings", 4483345998)
local CreditsTab = Window:CreateTab("Credits", 4483345998)

-- [[ MAIN TAB ]] --
MainTab:CreateSection("--- Farming ---")
MainTab:CreateToggle({
   Name = "Auto Teleport",
   CurrentValue = false,
   Callback = function(Value) _G.tpEnabled = Value end,
})

MainTab:CreateSection("--- Protection ---")
MainTab:CreateToggle({
   Name = "Anti-AFK",
   CurrentValue = false,
   Callback = function(Value) 
      _G.antiAfk = Value 
      Rayfield:Notify({Title = "System", Content = "Anti-AFK: "..tostring(Value), Duration = 2})
   end,
})

-- [[ MOVEMENT TAB ]] --
MovementTab:CreateSection("--- HD Admin Fly Style ---")

MovementTab:CreateToggle({
   Name = "Fly Enabled",
   CurrentValue = false,
   Callback = function(Value) _G.flyEnabled = Value end,
})

MovementTab:CreateSlider({
   Name = "Fly Speed",
   Range = {10, 500},
   Increment = 10,
   CurrentValue = 50,
   Callback = function(Value) _G.flySpeed = Value end,
})

MovementTab:CreateSection("--- Controls ---")
MovementTab:CreateKeybind({
   Name = "Noclip Keybind",
   CurrentKeybind = "N",
   Callback = function(Key) NoclipKey = Key end,
})

-- [[ SETTINGS TAB ]] --
SettingsTab:CreateKeybind({
   Name = "Menu Keybind",
   CurrentKeybind = "LeftAlt",
   Callback = function(Key) ToggleKey = Key end,
})

-- [[ CREDITS TAB ]] --
CreditsTab:CreateLabel("Owner: Slick1245")
CreditsTab:CreateParagraph({Title = "Fly Info", Content = "HD Admin Style: Smooth movement, no anchoring.\nUse W,A,S,D and Camera to steer."})

--- [[ LOGIC LOOPS ]] ---

-- HD ADMIN STYLE FLY (Smooth BodyVelocity)
local bv, bg
RunService.RenderStepped:Connect(function()
    if _G.flyEnabled and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local root = LocalPlayer.Character.HumanoidRootPart
        local cam = workspace.CurrentCamera
        
        -- Cria os forces se não existirem (estilo HD Admin)
        if not root:FindFirstChild("FlyBV") then
            bv = Instance.new("BodyVelocity", root)
            bv.Name = "FlyBV"
            bv.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
            
            bg = Instance.new("BodyGyro", root)
            bg.Name = "FlyBG"
            bg.MaxTorque = Vector3.new(math.huge, math.huge, math.huge)
            bg.P = 9e4
        end
        
        local moveDir = Vector3.new(0,0,0)
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then moveDir = moveDir + cam.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then moveDir = moveDir - cam.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then moveDir = moveDir - cam.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then moveDir = moveDir + cam.CFrame.RightVector end
        
        root.FlyBV.Velocity = moveDir * _G.flySpeed
        root.FlyBG.CFrame = cam.CFrame
    else
        -- Remove os forces quando desliga o fly
        if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
            if LocalPlayer.Character.HumanoidRootPart:FindFirstChild("FlyBV") then
                LocalPlayer.Character.HumanoidRootPart.FlyBV:Destroy()
            end
            if LocalPlayer.Character.HumanoidRootPart:FindFirstChild("FlyBG") then
                LocalPlayer.Character.HumanoidRootPart.FlyBG:Destroy()
            end
        end
    end
end)

-- Noclip Logic (Client-side)
RunService.Stepped:Connect(function()
    if _G.noclip and LocalPlayer.Character then
        for _, v in pairs(LocalPlayer.Character:GetDescendants()) do
            if v:IsA("BasePart") then v.CanCollide = false end
        end
    end
end)

-- Anti-AFK
LocalPlayer.Idled:Connect(function()
    if _G.antiAfk then
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end
end)

-- Global Inputs
UserInputService.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    if input.KeyCode == FlyKey then 
        _G.flyEnabled = not _G.flyEnabled 
        Rayfield:Notify({Title = "Movement", Content = "Fly: "..tostring(_G.flyEnabled), Duration = 2})
    end
    if input.KeyCode == NoclipKey then 
        _G.noclip = not _G.noclip 
        Rayfield:Notify({Title = "Movement", Content = "Noclip: "..tostring(_G.noclip), Duration = 2})
    end
    if input.KeyCode == ToggleKey then
        local gui = game:GetService("CoreGui"):FindFirstChild("Rayfield") or LocalPlayer:WaitForChild("PlayerGui"):FindFirstChild("Rayfield")
        if gui then gui.Enabled = not gui.Enabled end
    end
end)

Rayfield:LoadConfiguration()
