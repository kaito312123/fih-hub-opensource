local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- [[ SETTINGS ]] --
local NOME_DA_PART = "WINPART"
_G.tpEnabled = false
_G.noclip = false
_G.flyEnabled = false
_G.flySpeed = 50

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer

-- [[ KEY SYSTEM ]] --
local Window = Rayfield:CreateWindow({
   Name = "FihHub",
   LoadingTitle = "FihHub Loading...",
   LoadingSubtitle = "by Slick1245",
   ConfigurationSaving = { 
      Enabled = true, 
      FolderName = "FihHubConfigs", 
      FileName = "key" 
   },
   KeySystem = true,
   KeySettings = {
      Title = "Security Access",
      Subtitle = "Key System",
      Note = "Enter the required key to continue",
      FileName = "key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"SlickKey123"} 
   }
})

-- [[ TABS ]] --
local MainTab = Window:CreateTab("Main", 4483345998)
local MovementTab = Window:CreateTab("Movement", 4483345998)
local CreditsTab = Window:CreateTab("Credits", 4483345998)

-- [[ MAIN ]] --
MainTab:CreateSection("--- Farming ---")

MainTab:CreateToggle({
   Name = "Auto Teleport",
   CurrentValue = false,
   Flag = "ToggleTP",
   Callback = function(Value)
      _G.tpEnabled = Value
   end,
})

MainTab:CreateInput({
   Name = "Target Name",
   PlaceholderText = "WINPART",
   Callback = function(Text)
      NOME_DA_PART = Text
   end,
})

-- [[ MOVEMENT ]] --
MovementTab:CreateSection("--- Flight & Physics ---")

MovementTab:CreateKeybind({
   Name = "Fly Keybind (F)",
   CurrentKeybind = "F",
   Flag = "FlyKey",
   Callback = function()
      _G.flyEnabled = not _G.flyEnabled
      Rayfield:Notify({Title = "Movement", Content = "Fly: " .. tostring(_G.flyEnabled), Duration = 2})
   end,
})

MovementTab:CreateKeybind({
   Name = "Noclip Keybind (N)",
   CurrentKeybind = "N",
   Flag = "NoclipKey",
   Callback = function()
      _G.noclip = not _G.noclip
      Rayfield:Notify({Title = "Movement", Content = "Noclip: " .. tostring(_G.noclip), Duration = 2})
   end,
})

-- [[ CREDITS ]] --
CreditsTab:CreateSection("--- Information ---")
CreditsTab:CreateLabel("Owner: Slick1245")
CreditsTab:CreateParagraph({
    Title = "Controls", 
    Content = "Minimize/Open: [LEFT ALT]\nStatus: All scripts are client-side."
})

-- [[ BACKEND LOGIC ]] --

-- Noclip Logic (Client-side)
RunService.Stepped:Connect(function()
    if _G.noclip and LocalPlayer.Character then
        for _, v in pairs(LocalPlayer.Character:GetDescendants()) do
            if v:IsA("BasePart") then v.CanCollide = false end
        end
    end
end)

-- Fly Logic
task.spawn(function()
    while true do
        RunService.RenderStepped:Wait()
        if _G.flyEnabled and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
            local root = LocalPlayer.Character.HumanoidRootPart
            local camera = workspace.CurrentCamera
            local moveDir = Vector3.new(0,0,0)
            
            if UserInputService:IsKeyDown(Enum.KeyCode.W) then moveDir = moveDir + camera.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.S) then moveDir = moveDir - camera.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.A) then moveDir = moveDir - camera.CFrame.RightVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.D) then moveDir = moveDir + camera.CFrame.RightVector end
            
            root.Velocity = moveDir * _G.flySpeed
            root.Anchored = (moveDir == Vector3.new(0,0,0))
        elseif LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
            LocalPlayer.Character.HumanoidRootPart.Anchored = false
        end
    end
end)

-- Alt Keybind to Toggle UI
UserInputService.InputBegan:Connect(function(input, gpe)
    if not gpe and input.KeyCode == Enum.KeyCode.LeftAlt then
        local gui = game:GetService("CoreGui"):FindFirstChild("Rayfield") or LocalPlayer:WaitForChild("PlayerGui"):FindFirstChild("Rayfield")
        if gui then gui.Enabled = not gui.Enabled end
    end
end)

Rayfield:LoadConfiguration()
